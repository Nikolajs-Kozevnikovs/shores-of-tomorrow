root = true

[*.{cs,vb}]
# Use spaces for indentation (follow project default)
indent_style = space
indent_size = 4

# K&R style: opening brace on the same line for these C# constructs
csharp_new_line_before_open_brace_for_types = false
csharp_new_line_before_open_brace_for_methods = false
csharp_new_line_before_open_brace_for_properties = false
csharp_new_line_before_open_brace_for_accessors = false
csharp_new_line_before_open_brace_for_anonymous_methods = false
csharp_new_line_before_open_brace_for_control_blocks = false
csharp_new_line_before_open_brace_for_anonymous_types = false
csharp_new_line_before_open_brace_for_object_collection_array_initializers = false
csharp_new_line_before_open_brace_for_lambda_expression_body = false

# Keep file encoding consistent
charset = utf-8
